{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-linux",
            "hidden": true,
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "linux-gcc",
            "inherits": "base-linux",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-debug",
            "configurePreset": "linux-gcc",
            "configuration": "Debug"
        },
        {
            "name": "linux-release",
            "configurePreset": "linux-gcc",
            "configuration": "Release"
        }
    ]
}